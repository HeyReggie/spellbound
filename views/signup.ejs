<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body class="container font-Poppins bg-gray-300">
    <div class="min-h-screen flex items-center justify-center flex-col">
      <h1 class="text-center pb-8 text-3xl text-gray-700 font-semibold">
        Signup
      </h1>
      <div class="px-8">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => {
        %>
        <div
          class="
            bg-red-200
            border border-red-600
            text-red-900
            px-4
            py-3
            mb-4
            rounded
            relative
          "
          role="alert"
        >
          <%= el.msg %>
        </div>
        <% }) %> <% } %> <% if (locals.messages.info) { %> <%
        messages.info.forEach( el => { %> < class=" bg-blue-300 border
        border-blue-600 text-blue-800 px-4 py-3 rounded relative " role="alert"
        > <%= el.msg %>
      </div>
      <% }) %> <% } %>
      <form action="/signup" method="POST">
        <div>
          <label for="userName" class="block text-md font-medium text-gray-700"
            >Username</label
          >
          <div class="mt-1">
            <input
              id="userName"
              name="userName"
              type="text"
              autocomplete="username"
              required
              class="
                w-full
                rounded-lg
                shadow-sm
                focus:border-red-600
                focus:ring-red-600
              "
            />
          </div>
        </div>

        <div class="mt-4">
          <label for="email" class="block text-md font-medium text-gray-700"
            >Email Address</label
          >
          <div class="mt-1">
            <input
              id="email"
              name="email"
              type="email"
              autocomplete="email"
              required
              class="
                w-full
                rounded-lg
                shadow-sm
                focus:border-red-600
                focus:ring-red-600
              "
            />
          </div>
        </div>

        <div class="mt-4">
          <label for="password" class="block text-md text-gray-700 font-medium"
            >Password</label
          >
          <div class="mt-1">
            <input
              id="password"
              name="password"
              type="password"
              autocomplete="new-password"
              required
              class="
                w-full
                rounded-lg
                shadow-sm
                focus:border-red-600
                focus:ring-red-600
              "
            />
          </div>

          <div class="mt-4">
          <label for="confirmPassword" class="block text-md text-gray-700 font-medium"
            >Confirm Password</label
          >
          <div class="mt-1">
            <input
              id="confirmPassword"
              name="confirmPassword"
              type="password"
              autocomplete="new-password"
              required
              class="
                w-full
                rounded-lg
                shadow-sm
                focus:border-red-600
                focus:ring-red-600
              "
            />
          </div>
        </div>
        <button
          type="submit"
          class="
            w-full
            block
            mt-6
            text-lg
            hover:bg-red-500
            bg-red-700
            text-white
            rounded-lg
            shadow-sm
            text-center
            py-3
            mx-auto
            uppercase
          "
        >
          Create Account
        </button>
        <a
          href="/login"
          class="
            text-gray-800
            inline-block
            font-semibold
            hover:text-gray-600
            text-lg
            pt-4
          "
          >Already have an account? <span class="underline">Login</span></a
        >
      </form>
    </div>
  </body>
</html>
